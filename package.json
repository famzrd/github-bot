{
    "name": "github-bot",
    "version": "0.0.0",
    "description": "Self-Serving GitHub Bots",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/famzrd/github-bot.git"
    },
    "keywords": [
        "bot",
        "github"
    ],
    "author": "famzrd",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/famzrd/github-bot/issues"
    },
    "homepage": "https://github.com/famzrd/github-bot#readme",
    "scripts": {
        "run": "cross-env-shell \"cli command --api-secret $WEB_EXT_ --api-another-secret $API_SEC\"",
        "cy:run": "cross-env CYPRESS_CRASH_REPORTS=0 cypress run",
        "cy:open": "cross-env CYPRESS_CRASH_REPORTS=0 cypress open",
        "lint": "eslint processes/*.js views/*.js __examples__/**/*.js --fix",
        "test": "echo \"Error: no test specified\" && exit 0"
    },
    "eslintConfig": {
        "extends": [
            "plugin:cypress/recommended"
        ],
        "rules": {
            "cypress/no-assigning-return-values": "off",
            "cypress/no-unnecessary-waiting": "off"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm-run lint",
            "pre-push": "npm-run lint"
        }
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-plugin-cypress": "^2.10.3",
        "husky": "^4.2.3"
    },
    "dependencies": {
        "10minutemail": "^0.2.0",
        "cross-env": "^7.0.0",
        "cypress": "^4.0.2",
        "faker": "^4.1.0",
        "lodash": "^4.17.15",
        "rxjs": "^6.5.4"
    }
}
